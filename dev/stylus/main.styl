/* =============== Varibles ================== */ 
 	
white = #fff
green = #4EDE7D
grey1 = #D8E5DA
grey2 = #74747F
grey3 = #45454C
montserrat = 'Montserrat', sans-serif
droid = 'Droid Sans', sans-serif
green-button = linear-gradient(135deg, rgba(115,222,145,1) 0%, rgba(94,192,182,1) 100%)
animation = all ease .8s

/* ==========================================================================
   Header Section
   ========================================================================== */
.Home
    position relative
.diagonal
	background: linear-gradient(135deg, rgba(118,94,237,1) 0%, rgba(17,19,166,1) 100%)
	transform skewY(-4deg)translate(0px, -170px)
	width 100%
	height 111%
	position absolute
 
.header ul li a:focus 
	color #fff
	border 4px solid #73DE91
	border-radius 10px
	padding 2em 3em
    position relative
    opacity 0.4   
     
.header ul li a:focus:before
    content ''
    color #fff
    border 4px solid #73DE91
    border-radius 10px
    padding 1.5em 3em
    position absolute
   
.header ul
    margin-top 80px
    height 130px
    li
        margin-right 4em
        
.btn-header
    font-size 20px
    color #fff
    font-family droid
    background green-button
    border none
    position relative
    padding 20px 45px
    margin-top 45px
    &:focus
        color #fff
        border none
        box-shadow none
    &:active
        background green-button
        border none
    &:after
        content ""
        display inline-block
        height 100%
        width 100%
        background green-button
        position absolute
        top 15%
        left 4%
        z-index -1
        border-radius .25rem
        opacity .4
    &:hover
        color #fff
        
.Arrow-Icon
    width 21px
    margin-left 21px
        	
.header ul li a:hover
	color #fff
        	
.nav-link
	color white
	font-family 'Montserrat', sans-serif
	font-weight 400
	font-size 22px
    border 1px solid blue
    
.text-header
	padding-top 12%
 
.ocupation
    margin-top 3%
    margin-bottom 3%
          	  
.logo-juan
	width 136px
	transform translate(0, -35px)
           
.Juan2
	border-radius 1%
 
.juan-photo
    width 451px
        	
.text-hello
	margin 90px 0 0 60px
   	
h1
	font-family 'Montserrat'
	font-weight 400
	font-size 30px
             
h2
	font-family 'Montserrat'
	font-weight 100
	font-size 28px
       

.Background-juan
    position relative
    height 100%
    overflow hidden
    img
        position absolute
        width 110%
        left 50%
        top 32%
        transform translate(-50%,-50%)
        opacity 0.04      

.animated
    transition (all 0.2s)

.animating
    transition (all 0.6s)

.delay1
    animation-delay(0.1s)

.delay2
    animation-delay(0.2s)

.delay3
    animation-delay(0.3s)

.delay4
    animation-delay(0.4s)

.delay5
    animation-delay(0.8s)

.delay6
    animation-delay(0.9s)

.delay7
    animation-delay(1s)
            
/* ==========================================================================
   My work Section
   ========================================================================== */
   
