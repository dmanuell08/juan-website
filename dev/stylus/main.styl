.Subtitle
    display flex
    flex-direction column
    align-items center
    h4
        font-size 50px
        height 90px
        font-weight bold
        color grey3
        font-family droid
        background-image url("../img/Lines.svg")
        background-position center 100%
        background-size 90%
        background-repeat no-repeat
        margin-top 100px
        
.My-work
    margin-top 5em
    margin-bottom 5em
   .Button
        .Buton-2
           left 5%
           top 12%
           
.Work
    text-align center
    transition animation
    border-radius 3%
    
.Cards-works
    position relative
    &:after
        content ""
        height 100%
        display inline-block
        width 100%
        background-image url("../img/Lines.svg")
        background-position center
        background-repeat no-repeat
        transform skewY(-2deg)translate(-50%,-50%)
        top 50%
        left 50%
        position absolute
        opacity .1
        z-index -1

.Details
    color grey3
    padding-left 10px
    min-height 240px
    h5
        font-size 30px
        font-family droid
        font-weight bold

.Details
    h2
        font-size 20px
        margin-bottom 0
        color #45454C
        font-family droid
        height 60px
        background-image url("../img/Lines-2.svg")
        background-repeat no-repeat
        background-position 0 65%
        background-size 50%
        transition animation

.Details
    p
        font-family montserrat
        color #7B7B87
        font-size 17px
        margin-top 10px

