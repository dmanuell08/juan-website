//========Hamburger Menu===========

#Hamburger-Menu
    position relative
    height auto
    width 100%
    background linear-gradient(135deg, rgba(118,94,237,1) 0%, rgba(17,19,166,1) 100%)
    .Menuk
        width 100%
        height 60px
        background-color #fff
        display flex
        justify-content space-between
        align-items center
.Icon
    width 60px
    height 40px
    display inline-block
    position absolute
    top 0
    right 0
    z-index 1033
    .Hamburguer
        width 40px
        height 6px
        background-color #00e991
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
        box-shadow 0 2px 5px rgba(0,0,0,.2)
        transition .5s
        &:before, &:after
            content ""
            position absolute
            width 40px
            height 6px
            background-color #00e991
            box-shadow 0 2px 5px rgba(0,0,0,.2)
            transition .5s
        &:before
            top -13px
        &:after
            top 13px
.Icon.active
    .Hamburguer
        background-color rgba(0,0,0,0)
        box-shadow 0 2px 5px rgba(0,0,0,0)
        &:before
            transform rotate(45deg)
            top 0
        &:after
            transform rotate(135deg)
            top 0
.Menu-movil
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    transform translateX(-100%)
    height 100%
    width 100%
    background-color red
    transition .5s
    z-index 1032
.Menu-movil.active
    transform translateX(0%)             

