ease-custom = all 0.5s cubic-bezier(1.000, 0.000, 0.000, 1.000)



*
	margin 0
	padding 0

.Contorno-menu
	min-height 120px
.Menu-container
	background-color Withe_100	
	transition ease-custom
.Menu
	display flex
	align-items center
	justify-content space-between
	list-style none
	margin-bottom 0
.Menu-logo
	margin 30px 0
	transition ease-custom
.Slide.Menu-button
	display flex
	align-items center
	justify-content center
	&:hover
		text-decoration none
		color Grey_100
.Menu-button
	background-color #FFD240
	border none
	cursor pointer
	color Grey_100
	font-family montserrat
	font-weight 600	
	font-size 16px
	line-height 25px
	height 36px
	width 100px
	box-shadow 0 2px 2px 0 #E6AE17
