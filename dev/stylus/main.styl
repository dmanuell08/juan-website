	margin-bottom 32px
	
	
.Menu-container
	display flex
	justify-content space-between
	align-items center
	padding 0 64px
	position fixed
	width 100%
	height 120px
	top 0
	transition all 1s ease-in-out
	z-index 100
	transition Animation_1	

.Menu-container.hide
	top -100%
	transition all 1s ease-in-out

.Menu-logo
	width 62px
		
.Menu-list
	display flex
	list-style none
	margin-bottom 0
	li:nth-child(4)
		margin-right 0

.Menu-item
	margin-right 48px
	position relative
	a
		font-size 16px
		line-height 22px
		color #7A7F99
		position relative
	.Page_active
		font-weight 600
		color #fff
		&:before
			content ""
			display block
			position absolute
			top 50%
			left 50%
			transform translate(-50%,14px)
			height 3px
			width 85%
			border-radius 1px
			background-color #FFEB99
			z-index -1

.Menu-item
	&:before
		content ""
		display block
		position absolute
		top 50%
		left 50%
		transform translate(-50%,14px)
		height 3px
		width 0
		background-color #FFEB99
		z-index -1
		transition all .65s cubic-bezier(0.845, 0.000, 0.165, 1.000)
	&:hover
		&:before
			width 85%

.Menu-item.Menu-item_active
	&:before
		display none
.Home-slider
	position relative
	overflow hidden
	&:before
		content ""
		display block
		position absolute
		height 640px
		width 785px
		border-radius 6px 385px 385px 6px
		top 50%
		left 100%
		transform translate(-100%,-50%) rotate(180deg)
		background linear-gradient(138.5deg, #36394D 0%, #101224 100%)
		transition all 1000ms cubic-bezier(0.215, 0.610, 0.355, 1.000)
	.carousel-fade
		.carousel-item
			transition 1s all
			transition-duration 2s
			height  650px
	.carousel-inner
		min-height 650px
	.Slide-item
		min-height 650px
		&:focus
			outline none				
.carousel-inner
	overflow initial !important
.carousel-control-next
	right -200px
	display none
.carousel-control-prev
	left -200px
	display none
.Row-slide
	position relative
.Circles-bg
	position absolute
	width 120%
	height 90%
.Circle-item
	position absolute
	top 50%
	left 50%
	transform translate(-50%,-50%)
	animation-duration: 1.8s	
.Circle-1
	top 10%
	left 32%
	transform scale(1)
	animation-delay 1.1s
.Circle-2
	top 70%
	left 81%
	transform scale(1)
	animation-delay 1.7s	
.Circle-3
	top 91%
	left 79%
	transform scale(1)
	animation-delay 1.9s	
.Circle-4
	top 15%
	left 79%
	animation-delay 1.5s
.Circle-5
	top 70%
	left 50%
	animation-delay 1.3s
.Text-slide
	display flex
	flex-direction column
	justify-content center

.Images-slide
	position relative
	img
		float right
		display inline-block
		animation-delay 1.8s
		animation-duration 1.8s
	img:nth-child(1)
		margin-top 80px
		animation-delay 2.2s


.slick-dots
	width auto
	bottom 90px
	

.carousel-indicators
	margin 0
	display inline-table
	top 50%
	left 95%
	transform translate(-50%,-50%)	
	li
		width 64px
		height 4px
		background-color transparent !important
		margin-bottom 32px
		p
			font-size 16px
			line-height 20px
			font-weight 300px
			color #464B66
			position relative
			max-width 57px
			overflow hidden
			transition all 1.2s cubic-bezier(0.845, 0.000, 0.165, 1.000)
			&:before,&:after
				content ""
				display inline-block
				position absolute
				top 50%
				left 50%
				transform translate(-50%,-50%)
				height 3px
				width 32px
				border-radius 1px
				margin-left 13px
				background-color #464B66
				transition all 1.2s cubic-bezier(0.845, 0.000, 0.165, 1.000)
			&:after
				background-color #FFD240
				left 113%
	.active
		p
			color #FFD240
			transition all 1.2s cubic-bezier(0.845, 0.000, 0.165, 1.000)
			&:after
				transition all 1.2s cubic-bezier(0.845, 0.000, 0.165, 1.000)
				left 50%
					
.carousel-indicators li
	text-indent initial

.slick-dots 
	li.slick-active 
		button
			&:before
				opacity 1
				background-color Yellow_200


