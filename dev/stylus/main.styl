    font-family droid
    background green-button
    border none
    position relative
    padding 10px 20px
    &:focus
        color #fff
        border none
        box-shadow none
    &:active
        background green-button
        border none
    &:after
        content ""
        display inline-block
        height 100%
        width 100%
        background green-button
        position absolute
        top 15%
        left 4%
        z-index -1
        border-radius .25rem
        opacity .4

.Juan
    img
        border-radius .25rem
    &:after
        content ""
        border-radius .25rem
        display inline-block
        height 100%
        width 79%
        background-size cover
        position absolute
        top 3%
        right 15%
        z-index -1
        opacity .4
        
.Juan1
    &:after
