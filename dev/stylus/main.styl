//Fuentes//
montserrat = 'Montserrat', sans-serif;
opensans = 'Open Sans', sans-serif;

//Colores//
Withe_100 = #FFFFFF
Withe_200 = #F7FAFF
Withe_300 = #E9EDF5
Withe_400 = #E9EDF5

Yellow_100 = #FFF5CC
Yellow_200 = #FFEB99
Yellow_300 = #FFDE66
Yellow_400 = #FFD240
Yellow_500 = #FFC31A

Grey_100 = #1A1D33
Grey_200 = #464B66
Grey_300 = #7A7F99
Grey_400 = #B8BBCC

//Animaciones//
Animation_1 = 600ms all cubic-bezier(.785,.135,.15,.86)



*
	margin 0
	padding 0

body
	background-color #0E1024

body, a
	font-family opensans
	font-size 17px
	color #7A7F99
	list-style none
	&:hover
		color #7A7F99
		text-decoration none

h1,h2,h3,h4,h5,p
	margin 0
	
ul
	list-style none
	margin 0
	
button
	background-color transparent
	border none
	position relative
	&:focus
		outline none
		
.Smoothness
	position relative

.Btn
	height 40px
	width 144px
	cursor pointer
	animation-delay 1.4s
	border-radius 20px
	background linear-gradient(223.67deg, #FFDE66 0%, #FFD240 100%)
	box-shadow 0 4px 12px 0 #FFE099
	display flex
	justify-content center
	align-items center
	a
		font-size 12px
		line-height 12px
		font-weight 500
		letter-spacing 0.4px
		font-family montserrat
		color Grey_100
		&:focus
			outline none	
			

.Title
	font-family montserrat
	font-size 36px
	line-height 56px
	color Withe_100
	font-weight bold
	margin-bottom 32px
	animation-delay 1s

.Parrafo
	line-height 24px
	margin-bottom 32px
	animation-delay 1.2s
	font-size 16px
	min-width 370px

.Home-header
	height 80vh
	position relative
	margin-top 120px
	overflow hidden
.Top-line
	height 8px
	width 100%
	background-color #FFDE66
.Social-icon_container
	position absolute
	top 50%
	left 4%
	transform translate(-50%,-50%) 
	z-index 1
