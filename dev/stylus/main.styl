//Fuentes//
montserrat = 'Montserrat', sans-serif;
opensans = 'Open Sans', sans-serif;

//Colores//
Withe_100 = #FFFFFF
Withe_200 = #F7FAFF
Withe_300 = #E9EDF5
Withe_400 = #E9EDF5

Yellow_100 = #FFF5CC
