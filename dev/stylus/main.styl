//Fuentes//
montserrat = 'Montserrat', sans-serif;
opensans = 'Open Sans', sans-serif;

//Colores//
Withe_100 = #FFFFFF
Withe_200 = #F7FAFF
Withe_300 = #E9EDF5
Withe_400 = #E9EDF5

Yellow_100 = #FFF5CC
Yellow_200 = #FFEB99
Yellow_300 = #FFDE66
Yellow_400 = #FFD240
Yellow_500 = #FFC31A

Grey_100 = #1A1D33
Grey_200 = #464B66
Grey_300 = #7A7F99
Grey_400 = #B8BBCC

//Animaciones//
Animation_1 = 600ms all cubic-bezier(.785,.135,.15,.86)

//Delay//

Delay1 = 1s
Delay2 = 1.3s
Delay3 = 1.5s
Delay4 = 1.7s
Delay5 = 1.9s

*
	margin 0
	padding 0

body, a
	font-family opensans
	font-size 17px
	color #7A7F99
	list-style none
	&:hover
		color #7A7F99
		text-decoration none

h1,h2,h3,h4,h5,p
	margin 0

button
	background-color transparent
	border none
	position relative
	&:focus
		outline none

.Smoothness
	position relative

.Btn-container
	margin-left 8px

.Btn
	position relative
	padding 16px 24px
	cursor pointer
	a
		font-size 20px
		line-height 20px
		font-weight bold
		font-family montserrat
		color Grey_100
		&:focus
			outline none	
	&:before,&:after
		content ""
		display block
		position absolute
		width 66px
		height 66px
		border-radius 50%
		border 2px solid #FFEB99
		top 50%
		left 30px
		transform translate(-50%,-50%)
		z-index -1
		transition 400ms all cubic-bezier(0.785, 0.135, 0.150, 0.860)
	&:after
		width 46px
		height 46px
	&:hover
		&:before
			width 100%
			height 100%
			left 50%
			border-radius 25px
			background-color Yellow_400 
			border 2px solid Yellow_400
		&:after
			opacity 0		
			

.Title
	font-family montserrat
	font-size 40px
	line-height 62px
	color Grey_100
	font-weight bold
	margin-bottom 43px
	span
		position relative
		&:before
			content ""
			display block
			position absolute
			bottom 0
			left 58%
			right 50%
			width 120px
			height 16px
			background-color #FFF5CC
			z-index -1

.Parrafo
	line-height 27px
	margin-bottom 47px

.Home-header
	height 720px
	position relative
	margin-top 83px
	margin-bottom 120px
	display flex
	justify-content center
	align-items center

.Mouse-icon-container
	position absolute
	bottom -90px
	left 50%
	right 50%

.Mouse-icon_home
	display block
	width 50px
	height 80px
	border 4px solid #D7DBE0
	border-radius 25px
	position relative
	transform scale(.5)
	&:before
		content ""
		display block
		position absolute
		border 4px solid #D7DBE0
		border-radius 50%	
		top 3px
		left 40%
		right 50%
		height 10px
		width 8px
		animation-name Mouse-scroll
		animation-duration 4s
		animation-timing-function cubic-bezier(0.785, 0.135, 0.150, 0.860)
		animation-iteration-count infinite

@keyframes Mouse-scroll{
	0%{
		transform: translateY(15px);
	}
	50%{
		transform: translateY(40px);
	}
	100%{
		transform: translateY(15px);
	}
}
	
	
.Menu-container
	display flex
	justify-content space-between
	align-items center
	padding 40px 64px 0
	position fixed
	width 100%
	top 0

#Menu
	background-color #fff
	z-index 100
	transition Animation_1

.Menu-logo
	width 62px
		
.Menu-list
	display flex
	list-style none
	margin-bottom 0
	li:nth-child(4)
		margin-right 0

.Menu-item
	margin-right 48px
	position relative
	a
		font-size 16px
		line-height 19px
		color #464B66
		position relative

.Page_active
	font-weight 600
	&:before
		content ""
		display block
		position absolute
		bottom 3px
		right -7px
		height 4px
		width 40px
		background-color #FFEB99
		z-index -1

.Menu-item
	&:before
		content ""
		display block
		position absolute
		bottom 3px
		right -7px
		height 4px
		width 0
		background-color #FFEB99
		z-index -1
		transition all .65s cubic-bezier(0.845, 0.000, 0.165, 1.000)
	&:hover
		&:before
			width 40px

.Menu-item.Menu-item_active
	&:before
		display none

.carousel-fade
	.carousel-item
		transition 1s all
		transition-duration 2s

.carousel-control-next
	right -200px

.carousel-control-prev
	left -200px

.Slide-item
	&:focus
		outline none

.Text-slide
	display flex
	flex-direction column
	justify-content center

.Images-slide
	img
		width 200px
		float right
		display inline-block
		animation-delay 1s
		animation-duration 800ms 
		animation-timing-function cubic-bezier(0.785, 0.135, 0.150, 0.860)
	img:nth-child(1)
		margin-top 80px
		animation-delay 1s
	img:nth-child(2)
		margin-right 80px

.slick-dots
	width auto
	bottom 90px
	

.carousel-indicators
	margin 0
	justify-content flex-start
	li
		width 64px
		height 4px
		background-color #EDF0F5
	.active
		
		background-color Yellow_200

.slick-dots 
	li.slick-active 
		button
			&:before
				opacity 1
				background-color Yellow_200