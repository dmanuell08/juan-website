/* ==========================================================================
   About me Section
   ========================================================================== */
            
.About-me
    font-family droid
    color #fff
    position relative
    overflow hidden
    .diagonal3
        background linear-gradient(135deg, rgba(118,94,237,1) 0%, rgba(17,19,166,1) 100%)
        transform skewY(-4deg)translate(0px,75px)
        width 100%
        height 878px
        position absolute
        z-index -1
    .container
        padding-top 8em
        padding-bottom 2em
    h5
        font-size 30px
        font-weight bold
    p
        font-size 17px
        strong
            color #00e991
            cursor pointer
    &:after, &:before
        content ""
        width 100%
        height 15%
        display block
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
        opacity .2
        background-repeat no-repeat
        background-position center
        background-image url("../img/Lines.svg")
    &:before
        top 44%
        left 0%
    &:after
        top 75%
        left 102%
        
          

//==============================Media Query================================================//

// Large devices //
@media (max-width: 1200px)  
    .diagonal //Header Section//
        height 117%
        
    .Juan   //Contact-me Section//
        &:after
            width 94%
            right 1%
            top 2%
    .Juan2
        &:after
            width 93%
            right 0%
    
    .Contact-me
        h5,a
            font-size 35px

    .About-me //About-me Section//
        &:before, &:after
            height 11%
        &:before
            left -10%
        &:after
            left 110%


// Medium devices (tablets, less than 992px)
@media (max-width: 991px)
    .Background-juan //Header Section//
        img
            top 50%

    .Home
        .container
            padding-top 7em
            
    .navbar
        display none

    .diagonal
        height 117%
        
    .text-white
        padding-left 0
        h1,h2
            font-size 18px
        a
            margin-left 1.5rem
            
    .Cards-works  //My-work Section//
        &:after
            background-position center 30%

    .Ui-designer //What-i-do Section//
        h3,p
            margin-bottom 1.5rem
    
    .What-i-do
        .diagonal2
            height 110%
   

    .Contact-me  //Contact-me Section//
        margin-bottom -8em
        
    .Juan2    
        &:after
            width 83%
            right 11%
    
    .Contacto
        &:after
            background-position center 20%

    .text-lg-right
        img
            margin-bottom 3em
    
    .About-me //About-me Section//
        &:before
            top 30%
        &:after
            top 88%
            


@media (max-width: 767px)
    .diagonal//Header Section//
        height 119%

    .text-white
        h1,h2
            margin-left 1.5rem
        

    
    
    .Juan2    //Contact-me Section//
        &:after
            width 94%
            right 0%
            
    .About-me //About-me Section//
        &:before, &:after
            height 8%


@media (max-width: 575px)
    .Subtitle
        h4
            font-size 40px
            background-position center 80%

    .Juan   //Contact-me Section//
        &:after
            width 91%
            top 3%
    .Contact-me
        h5,a
            font-size 30px
            
    .Contacto
        &:after
            width 100%
    
    .Info
        width auto
            
    .About-me //About-me Section//
        p
            margin-bottom 2em
        .Know-more
            margin-bottom 6em
    
    .Banner
        width 100%
        height 80px
        background-color #fff
        position fixed
        z-index 1
        padding 5px 20px
        display flex
        align-items center
        justify-content space-between
        img
            width 70px

    .Hamburguer
        height 100%
        width 100%
        position fixed
        background-color red
        top 50%
        left -50%
        transform translate(-50%,-50%)
        z-index 2
        transition .8s

    .Hamburguer.active
        left 50%


    .Icon
        width 50px
        height 50px
        position fixed
        right 0
        margin 15px 20px
        cursor pointer
        z-index 3
        .Lineas
            width 40px
            height 6px
            background-color #5ec0b6
            position absolute
            top 50%
            left 50%
            transform translate(-50%,-50%)
            box-shadow 0 2px 5px rgba(0,0,0,.2)
            transition .8s
            &:before,&:after
                content ""
                width 40px
                height 6px
                background-color #5ec0b6
                position absolute
                box-shadow 0 2px 5px rgba(0,0,0,.2)
                transition .8s
            &:before
                top -16px
            &:after
                top 16px

    .Icon.active
        .Lineas
            background rgba(0,0,0,0)
            box-shadow 0 2px 5px rgba(0,0,0,0)
            &:before
                top 0
                transform rotate(45deg)
            &:after
                top 0
                transform rotate(135deg)

            

            
