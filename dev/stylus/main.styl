//Fuentes//
montserrat = 'Montserrat', sans-serif;
opensans = 'Open Sans', sans-serif;

//Colores//
Withe_100 = #FFFFFF
Withe_200 = #F7FAFF
Withe_300 = #E9EDF5
Withe_400 = #E9EDF5

Yellow_100 = #FFF5CC
Yellow_200 = #FFEB99
Yellow_300 = #FFDE66
Yellow_400 = #FFD240
Yellow_500 = #FFC31A

Grey_100 = #1A1D33
Grey_200 = #464B66
Grey_300 = #7A7F99
Grey_400 = #B8BBCC

//Transici√≥n//
ease-custom = all 0.5s cubic-bezier(0.455, 0.030, 0.515, 0.955)



*
	margin 0
	padding 0

.Contorno-menu
	min-height 120px
.Menu-container
	background-color Withe_100	
	transition ease-custom
.Menu-visible 
		transform translateY(0)
		transition ease-custom
.Menu
	display flex
	align-items center
	justify-content space-between
	list-style none
	margin-bottom 0
.Menu-logo
	margin 30px 0
	transition ease-custom
.Slide.Menu-button
	display flex
	align-items center
	justify-content center
	&:hover
		text-decoration none
		color Grey_100
.Menu-button
	background-color #FFD240
	border none
	cursor pointer
	color Grey_100
	font-family montserrat
	font-weight 600	
	font-size 16px
	line-height 25px
	height 36px
	width 100px
	box-shadow 0 2px 2px 0 #E6AE17
	&:focus
		outline Grey_100

.Up-animation
	transition ease-custom
	&:hover
		transition ease-custom
		transform translateY(-2px)
		box-shadow 0 6px 16px 0 rgba(230, 175, 23,0.59)
	

.Header-section
	text-align center
.Header-row
	justify-content center
.Header-logo
	margin-top 120px
.Text-header
	font-family montserrat
	color Grey_300
	line-height 32px
	padding 0
	margin-top 40px
	h1,h2,h3
		font-size 20px
		font-weight 300
.Keyword
